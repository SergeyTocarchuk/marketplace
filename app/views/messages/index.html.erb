<div id="messages">
  <% @messages.each do |message| %>
    <p><%= message.messagable.first_name %>: <%= message.content %></p>
  <% end %>
</div>
<div>
  <%= form_with(model: @message, url: chat_messages_path(@chat), method: :post) do |form| %>
    <%= form.text_field :content %>
    
    <%= form.submit "Send" %>
  <% end %>
</div>
