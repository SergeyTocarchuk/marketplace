<div id="chat_messages" data-chat-id="<%= @chat.id %>" data-customer-id="<%= @current_customer.id %>">
  <% @messages.each do |message| %>
    <p><%= message.content %></p>
  <% end %>
</div>
<div id="new_message"></div>
<div>
  <%= form_with(model: @message, url: chat_messages_path(@chat), method: :post) do |form| %>
    <%= form.text_field :content %>
    
    <%= form.submit "Send" %>
  <% end %>
</div>
